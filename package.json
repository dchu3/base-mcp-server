  "devDependencies": {
    "@types/node": "^20.14.10",
    "@types/yargs": "^17.0.33",
    "@typescript-eslint/eslint-plugin": "^7.16.0",
    "@typescript-eslint/parser": "^7.16.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.3.3",
    "tsup": "^8.1.0",
    "tsx": "^4.15.7",
    "typescript": "^5.5.3",
